<div class="container">
  <div class="mt-5">
    <h1>UPCOMING INTERVIEWS</h1>
  </div>

  <br>
  <div class="search-bar row justify-content-between">
    <div id='interview-dates'>
      <%= simple_form_for interviews_path, method: :get, wrapper: :inline_form, html: {class: "form-inline w-100"} do |f| %>
        <%= f.input :date, as: :string, input_html: { class: "mr-sm-2" }, placeholder: "Date" %>
        <%= f.input :focus, as: :select, :collection => ['Ruby', 'Javascript', 'HTML/CSS'], input_html: { class: "mr-sm-2" }, prompt: "Code" %>
        <%= f.input :interview_language, :collection => ['English', 'German', 'French', 'Spanish'], input_html: { class: "mr-sm-2" }, prompt: "Language" %>
        <%= f.input :experience, :collection => ['Beginner', 'Intermediate', 'Expert'], input_html: { class: " mr-sm-2" }, prompt: "Difficulty" %>
        <%= text_field_tag :query, params[:query], class: "col-2 mr-sm-2 form-control", placeholder: "Nickname" %>
        <%= f.submit "Apply filters", class: "btn btn-success col-2" %>
      <% end %>
    </div>
  </div>
  <br>

  <h3 class="mt-5">Today</h3>
  <div class="row justify-content-start">
    <% @interviews.each do |interview| %>
      <% if interview.date == Date.today %>
        <div class="col-3 my-3">
          <%= render partial: 'shared/card-index', locals: { interview: interview } %>
        </div>
      <% end %>
    <% end %>
  </div>

  <h3 class="mt-5">Tomorrow</h3>
  <div class="row justify-content-start">
    <% @interviews.each do |interview| %>

      <% if interview.date == Date.tomorrow %>
        <div class="col-3 my-3">
          <%= render partial: 'shared/card-index', locals: { interview: interview } %>
        </div>
      <% end %>
    <% end %>
  </div>

  <h3 class="mt-5">In the future</h3>
  <div class="row justify-content-start">
    <% @interviews.each do |interview| %>
      <% if interview.date > Date.tomorrow %>
        <div class="col-3 my-3">
          <%= render partial: 'shared/card-index', locals: { interview: interview } %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<br>
<br>
<%= render partial: 'shared/footer' %>
